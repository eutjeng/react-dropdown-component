{
  "name": "react-dropdown-component",
  "version": "1.0.0",
  "description": "A custom React dropdown component with TypeScript, ESLint, Prettier, and Webpack.",
  "main": "index.js",
  "baseUrl": "src",
  "type": "module",
  "paths": {
    "*": [
      "*",
      "src/*"
    ]
  },
  "scripts": {
    "start": "webpack serve --config webpack.dev.mjs",
    "build": "webpack --config webpack.prod.mjs",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,scss,md,json}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eutjeng/react-dropdown-component.git"
  },
  "keywords": [
    "react",
    "dropdown",
    "typescript",
    "webpack"
  ],
  "author": "Evgeny Geyer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eutjeng/react-dropdown-component/issues"
  },
  "homepage": "https://github.com/eutjeng/react-dropdown-component#readme",
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.24.3",
    "@babel/preset-env": "7.24.3",
    "@babel/preset-react": "7.24.1",
    "@babel/preset-typescript": "7.24.1",
    "@types/jest": "29.5.12",
    "@types/react": "18.2.67",
    "@types/react-dom": "18.2.22",
    "@typescript-eslint/eslint-plugin": "7.3.1",
    "@typescript-eslint/parser": "7.3.1",
    "babel-loader": "9.1.3",
    "css-loader": "6.10.0",
    "css-minimizer-webpack-plugin": "6.0.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "html-webpack-plugin": "5.6.0",
    "mini-css-extract-plugin": "2.8.1",
    "prettier": "3.2.5",
    "style-loader": "3.3.4",
    "terser-webpack-plugin": "5.3.10",
    "ts-loader": "9.5.1",
    "typescript": "5.4.3",
    "webpack": "5.91.0",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "5.0.4",
    "webpack-merge": "5.10.0"
  }
}
